{
  "version": 2,
  "name": "ai-empire-automation",
  "functions": [
    {
      "src": "api/main.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb"
      }
    },
    {
      "src": "frontend/dashboard/main.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/main.py"
    },
    {
      "src": "/dashboard/(.*)",
      "dest": "/frontend/dashboard/main.py"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/dashboard/main.py"
    }
  ],
  
  "functions": {
    "api/main.py": {
      "maxDuration": 30
    },
    "frontend/dashboard/main.py": {
      "maxDuration": 30
    }
  },
  "crons": [
    {
      "path": "/api/cron/hourly-automation",
      "schedule": "0 * * * *"
    },
    {
      "path": "/api/cron/daily-automation", 
      "schedule": "0 9 * * *"
    },
    {
      "path": "/api/cron/weekly-briefing",
      "schedule": "0 8 * * 1"
    }
  ]
}
